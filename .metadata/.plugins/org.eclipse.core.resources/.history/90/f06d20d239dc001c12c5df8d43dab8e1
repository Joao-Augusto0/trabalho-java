package modelo.modelodao;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.util.ArrayList;

import modelo.Enfermeira;

public class EnfermeiraDAO {

	private BufferedReader br;
	private BufferedWriter bw;
	private String path = "./data/Medico.csv";
	
	public ArrayList<Enfermeira> ler(){
		ArrayList<Enfermeira> linhas = new ArrayList<>();
		Enfermeira enfermeira;
		try {
			br = new BufferedReader(new FileReader(path));
			String linha = br.readLine();
			while(linha != null) {
				enfermeira = new Enfermeira(linha);
				linhas.add(enfermeira);
				linha = br.readLine();
			}
			br.close();
		}catch (FileNotFoundException e) {
			System.out.println(e);
		} catch (IOException e) {
			System.out.println(e);
		}
		return linhas;
	}
	
	public void escrever(ArrayList<Enfermeira> linhas) {
		try {
			bw = new BufferedWriter(new FileWriter(path));
			for (Enfermeira e : linhas) {
				bw.write(e.toCSV());
			}
			bw.close();
		} catch (IOException e) {
			System.out.println(e);
		}
	}
}












